        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock FontWeight="Bold" Text="СКО"
                       FontSize="15" Margin="5"  VerticalAlignment="Center">
            </TextBlock>
            <TextBox TextWrapping="Wrap" FontWeight="Bold" MinWidth="25" FontSize="15"
